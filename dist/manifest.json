{
  "manifest_version": 2,
  "name": "Awesome Twit Bar",
  "version": "0.0.2",

  "description": "This add-on allow you to operate twitter from smart location bar",

  "background": {
    "scripts": ["main.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "https://api.twitter.com/*"
  ],

  "omnibox": { "keyword" : "atw" }
}
